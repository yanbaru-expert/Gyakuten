.aws-table-head {
  background-color: #5D99FF;
}

#line-contents {
  margin: 0 auto;
  width: 70%;

  h2 {
    padding: 30px 0px 10px 0px;
  }

  p {
    line-height: 3em;
  }
}

footer {
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;

  a {
    padding: 0 20px;
    font-size: 2em;
    cursor: pointer;
  }
}

// 一覧ページ
#questions {
  .question-container {
    padding: 30px 0;
  }

  a {
    text-decoration: none;
    display: block;
    color: #333333;
    border: solid 2px #505050;
    border-radius: 10px;
    transition: .4s;

    .title {
      font-size: 35px;
      line-height: 2;
    }

    .info {
      padding: 10px 10px 10px 20px;
      color: #BBBBBB;
    }
  }

  a:hover {
    border: solid 2px #DC3545;
    -webkit-transform: translateY(-5px);
    -ms-transform: translateY(-5px);
    transform: translateY(-5px);
    transition: .4s;
  }

  .question {
    padding: 10px;
  }
}

// 詳細ページ
#question {
  h3 {
    font-size: 45px;
  }

  p {
    font-size: 40px;
  }

  .title {
    padding-top: 70px;
  }

  .detail {
    padding-top: 70px;
  }

  .solution {
    padding-top: 70px;
  }
}

.advertising_banner {
  max-width: 600px;
  margin: 2rem auto;

  .cover img {
    border: solid #505050 1px;
    border-radius: 10px;
    padding: 5px;
    width: 80%;
  }

  :hover {
    transition: opacity 0.5s;
    opacity: 0.9;
  }
}

.movie-body {
  height: 290px;
  overflow: hidden;
  text-overflow: ellipsis;
}