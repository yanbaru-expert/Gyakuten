#container {
  width: 90%;
  margin: 0 auto;
  padding: 50px 0 160px 0;

  .form-control {
    height: 100px;
    font-size: 50px;
  }

  h1 {
    padding: 40px 0px 10px 0px;
    font-size: 3em;
  }

  h2 {
    padding: 40px 0px 10px 0px;
    font-size: 3em;
  }

  p {
    font-size: 2.2em;
    line-height: 1.9em;
  }

  pre {
    font-size: 1.7em;
    line-height: 1.9em;
  }

  li {
    font-size: 2em;
  }

  table {
    table-layout: fixed;
    font-size: 1.5em;

    thead {
      color: white;
    }

    a { //リンクをテーブルの中で折り返して表示　※現在は使用してないが記録として
      white-space: pre; /* CSS 2.0 */
      white-space: pre-wrap; /* CSS 2.1 */
      white-space: pre-line; /* CSS 3.0 */
      white-space: -pre-wrap; /* Opera 4-6 */
      white-space: -o-pre-wrap; /* Opera 7 */
      white-space: -moz-pre-wrap; /* Mozilla */
      white-space: -hp-pre-wrap; /* HP Printers */
      word-wrap: break-word; /* IE 5+ */
    }

    .w-1 {
      width: 10%;
    }

    .w-2 {
      width: 20%;
    }

    .w-5 {
      width: 50%;
    }
  }

  p.movie-title {
    height: 200px;
    font-size: 1.7rem;
    line-height: 1.5em;
  }
}

#contents {
  .desc {
    visibility: hidden;
  }
}

#users_web {
  h1 {
    font-size: 3em;
  }

  #web-table {
    font-size: 2em;
  }

  .table-container {
    padding: 30px 0;
  }

  table {
    table-layout: fixed;

    thead {
      color: white;
    }

    a { //リンクをテーブルの中で折り返して表示　※現在は使用してないが記録として
      white-space: pre; /* CSS 2.0 */
      white-space: pre-wrap; /* CSS 2.1 */
      white-space: pre-line; /* CSS 3.0 */
      white-space: -pre-wrap; /* Opera 4-6 */
      white-space: -o-pre-wrap; /* Opera 7 */
      white-space: -moz-pre-wrap; /* Mozilla */
      white-space: -hp-pre-wrap; /* HP Printers */
      word-wrap: break-word; /* IE 5+ */
    }
  }

  .w-1 {
    width: 13%;
  }

  .w-2 {
    width: 20%;
  }

  .w-5 {
    width: 50%;
  }

  .btn {
    margin: 30px;
  }

  .kaminari-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

#text-contents {
  margin: 0 auto;

  img {
    width: 100%;
  }

  p {
    margin-bottom: 1rem;
  }

  h1, h2 {
    font-weight: bold;
    padding-top: 50px;
  }

  table {
    margin: 30px auto;
  }

  table, th, td {
    border-collapse: collapse;
    border: 1px solid #ccc;
    line-height: 1.5;
    padding: 10px;
    font-size: 1.4em;
    color: #000;
  }

  table.type06 th {
    width: 150px;
    padding: 10px;
    font-weight: bold;
    vertical-align: top;
  }

  table.type06 td {
    width: 350px;
    padding: 10px;
    vertical-align: top;
  }

  tr:nth-child(even) {
    background: #d9d9d9;
  }
}

.texts-wrapper {
  text-align: center;
}

.contents-title h2 {
  color: #444444;
}

.texts-content {
  width: 90%;
  margin: 10% 5%;
  background-color: #f7f7f7;
  box-shadow: 0px 1px #c7d4e6;
  border: 3px solid #c7d4e6;
  border-radius: 9px;
  cursor: pointer;
  position: relative;
  height: 680px;

  &:hover {
    box-shadow: 0px 0px 0px 1px #7d9ccb;
    border: 1px solid #7d9ccb;
    transition: all linear 0.1s;
  }

  p {
    margin-bottom: 30px;
    left: 24px;
    bottom: 0px;
    position: absolute;
    font-size: 28px !important;
    color: #444444;
  }

  h3 {
    text-align: left;
    padding: 0 40px;
    margin-top: 44px;
    font-size: 32px;
    color: #444444;
  }

  img {
    width: 100%;
    border-top-left-radius: 9px;
    border-top-right-radius: 9px;
    max-height: 394px;
  }

  a {
    text-decoration: none;
    display: block;
    height: 100%;
  }
}

