                  <%= image_tag "https://d5izmuz0mcjzz.cloudfront.net/design_course/deco4.png" , class: "deco4" %>
        </div>
      </section>

      <section class="feature-wrapper wrapper">
        <div class="gra-title">
          <h2>Feature</h2>
